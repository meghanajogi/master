
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:id="@+id/textView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="@string/title"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_20sdp"
    android:textSize="@dimen/_14ssp"
    android:fontFamily="sans-serif-condensed-medium"
    android:textColor="@color/black"/>
<EditText
    android:id="@+id/title_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    app:layout_constraintTop_toBottomOf="@id/textView1"
    android:hint="@string/enter_title"
    android:textColor="@color/black"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/black_background"
    android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/descriptions"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/description_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/black_background"
        android:gravity="left"
        android:hint="@string/enter_description"
        android:maxLength="100"
        android:maxLines="4"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/startdate"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/startdate_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        android:textColor="@color/black"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/black_background"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableRight="@drawable/ic_date_range_black_24dp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startdate_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/end_date"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/enddate_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        android:textColor="@color/black"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/black_background"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableRight="@drawable/ic_date_range_black_24dp" />





    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enddate_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/create_by"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/createdby_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        android:textColor="@color/black"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/black_background"
        android:layout_marginTop="@dimen/_10sdp"/>


    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/white"
        android:text="@string/save"
        android:background="@drawable/gradient_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createdby_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
